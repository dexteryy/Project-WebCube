{
  "files.associations": {
    "*.config": "properties",
    ".code-workspace": "jsonc",
    ".babelrc": "json",
    "babelrc": "json",
    ".eslintrc": "jsonc",
    "eslintrc": "jsonc",
    ".eslintrc*.json": "jsonc",
    ".stylelintrc": "jsonc",
    "stylelintrc": "jsonc",
    ".htmlhintrc": "jsonc",
    "htmlhintrc": "jsonc",
    "Procfile*": "shellscript",
    "README": "markdown"
  },
  "search.useIgnoreFiles": true,
  "search.exclude": {
    "**/dist": true,
    "**/build": true,
    "**/yarn.lock": true,
    "**/package-lock.json": true,
    "**/*.log": true,
    "**/*.pid": true,
    "**/.git": true,
    "**/node_modules": true,
    "**/bower_components": true
  },
  //
  "editor.rulers": [
    80,
    120
  ],
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  //
  "eslint.nodePath": "./node_modules",
  "eslint.enable": true,
  "eslint.run": "onType",
  "eslint.options": {
    "rules": {
      "no-debugger": "off"
    }
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact"
    // {
    //   "language": "typescript",
    //   "autoFix": true
    // },
    // {
    //   "language": "typescriptreact",
    //   "autoFix": true
    // }
  ],
  "javascript.validate.enable": false,
  "typescript.validate.enable": true,
  "tslint.enable": true,
  "flow.enabled": false,
  //
  "stylelint.enable": true,
  "css.validate": false,
  "scss.validate": false,
  "less.validate": false,
  //
  "htmlhint.enable": true,
  //
  "prettier.disableLanguages": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "css",
    "less",
    "scss",
    "jsonc",
    "json"
  ],
  //
  "eslint.autoFixOnSave": true,
  "javascript.format.enable": false,
  // "typescript.format.enable": false,
  // "typescript.format.enable": true,
  "json.format.enable": true,
  "[json]": {
    "editor.tabSize": 2,
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.tabSize": 2,
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true
  }
}
